<div is="flynt-form-contact-form-7" class="flyntComponent componentSpacing {{ options.theme }}">
  <div class="container centerMaxWidthContainer">
    {% if preContentHtml %}
      <div class="preContent">
        {{ preContentHtml|e('wp_kses_post') }}
      </div>
    {% endif %}
    <div class="form {{ options.card ? 'themeReset boxPadding' }}">
      {% set formShortcode = '[contact-form-7 id="' ~ formId ~ '"]' %}
      {{ formShortcode|shortcodes }}
      {% if contentFooterHtml %}
        <div class="postContent">
          {{ contentFooterHtml|e('wp_kses_post') }}
        </div>
      {% endif %}
    </div>
  </div>
</div>
