<figure class="image{{ not image.svg and type == 'card' ? ' image-object' }}">
  {% if not image.svg %}
    <img class="image-tag lazyload lazyload--fade"
      src="{{ image.src|resizeDynamic(384) }}"
      srcset="{{ placeholderImage(384, 384 / image.aspect) }}"
      data-aspectratio="{{ image.aspect }}"
      data-srcset="
        {{ image.src|resizeDynamic(384) }} 384w,
        {{ image.src|resizeDynamic(240) }} 240w,
        {{ image.src|resizeDynamic(206) }} 206w,
        {{ image.src|resizeDynamic(170) }} 170w,
        {{ image.src|resizeDynamic(164) }} 164w,
        {{ image.src|resizeDynamic(128) }} 128w,
        {{ image.src|resizeDynamic(114) }} 114w"
      data-sizes="auto"
      alt="{{ image.alt|e }}">
  {% else %}
    {{ image.svg }}
  {% endif %}
  {% if link.title and type == 'card' %}
    <figcaption class="caption">{{ link.title|e }}</figcaption>
  {% endif %}
</figure>
